<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:id="@+id/rlOnItem"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/ivNewsImg"
            android:layout_width="@dimen/item_layout_width_II"
            android:layout_height="@dimen/item_layout_height_II"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@mipmap/fail_img"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/tvNewsTitle"
            style="@style/item_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/ivNewsImg"
            android:text="未显示内容，请检查网络" />

        <TextView
            android:id="@+id/tvType"
            style="@style/item_TextView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/ivNewsImg" />

        <TextView
            android:id="@+id/tvNewsTime"
            style="@style/item_TextView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/tvType" />

    </RelativeLayout>
</android.support.v7.widget.CardView>

